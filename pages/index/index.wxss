    margin-bottom: 30rpx;
}
/* 整个天气预报卡片 */
.header-modular {
    height: 300rpx;
    background-color: #64C8FA;
    background: linear-gradient(to bottom, #56CCF2, #2F80ED);
    position: relative;
    padding: 30rpx;
    margin-top: 30rpx;
    border-radius: 30rpx;
}
/* 波浪的效果 */
.header-modular .bg-wave {
    width: 100vw;
    position: absolute;
    bottom: -1px;
    left: 0;
    right: 0;
    height: 100rpx;
    mix-blend-mode: screen;
    border-radius: 30rpx;
}
