/* 纯CSS实现滚动播放 */
.scoll {
    white-space: nowrap;
    /* 动画对象 速度控制 */
    animation: 13s loop linear infinite normal;
    display: inline-block;
    vertical-align: top;
    font-size: 30rpx;
    /* color: #6e7074; */
}

@keyframes loop {
    0% {
      transform: translateX(350px);
      -webkit-transform: translateX(350px);
    }
  
    100% {
      transform: translateX(-100%);
      -webkit-transform: translateX(-100%);
    }
  }
  /* 浏览器适配  Safari and Chrome*/
  @-webkit-keyframes loop {
    0% {
      transform: translateX(350px);
      -webkit-transform: translateX(350px);
    }
  
    100% {
      transform: translateX(-100%);
      -webkit-transform: translateX(-100%);
    }
  }

/* 天气预报 */
 /* 工具类 */
.row {
    display: flex;
    align-items: center;
}

